<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0d3d4"
    android:orientation="vertical"
    android:weightSum="30" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:weightSum="10" >

        <ImageButton
            android:id="@+id/editText_backBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.7"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/editText_finBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_complete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2.8"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/editText_profile"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@drawable/profile_pics"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8.5"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="10" >

            <TextView
                android:id="@+id/editText_nickname"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:gravity="left|bottom"
                android:paddingLeft="5dp"
                android:text="또니"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editText_id"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:gravity="left|top"
                android:paddingLeft="5dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="19.9"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/edittext_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editText_text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5.1"
        android:background="#ffffff"
        android:gravity="left"
        android:hint="내용을 입력하세요."
        android:padding="10dp" />

</LinearLayout><!-- From: file:/D:/AND/androidstudio/workspace/app/src/main/res/layout/edittext.xml -->