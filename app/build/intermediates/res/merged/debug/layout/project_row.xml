<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/pj_num"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/list_num_bg"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="10" >

            <TextView
                android:id="@+id/pj_title"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="3dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="8" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="시작일"
                    android:textStyle ="bold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.2"
                    android:gravity="center"
                    android:text="컷 수"
                    android:textStyle ="bold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.2"
                    android:gravity="center"
                    android:textStyle ="bold"
                    android:text="촬영 주기"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:textStyle ="bold"
                    android:text="진행률"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/pj_st_date"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.9"
            android:gravity="center|right"
            android:text="2015년02월03일"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pj_goal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="3/120"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pj_alarm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="1(일)"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pj_percent"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.8"
            android:gravity="center"
            android:paddingLeft="22dp"
            android:text="27%"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/AND/androidstudio/workspace/app/src/main/res/layout/project_row.xml -->