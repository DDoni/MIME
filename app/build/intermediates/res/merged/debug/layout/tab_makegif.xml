<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#b0d3d4"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:weightSum="20">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/shortGif_Btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/shortcamera_click"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="15.5"
        android:background="@drawable/pj_list_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="14">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center|bottom"
            android:text=""
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/longGif_Btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/longcamera_click"/>
        </LinearLayout>

        <ListView
            android:id="@+id/longGif_List"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:divider="#EBFBFF"
            android:dividerHeight="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">
        </ListView>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/AND/androidstudio/workspace/app/src/main/res/layout/tab_makegif.xml -->