<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tl_bg"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#b0d3d4"
        android:orientation="horizontal"
        android:weightSum="10" >

        <ImageButton
            android:id="@+id/tl_btn_addUser"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/_btn_add_user" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6.1" />

        <ImageButton
            android:id="@+id/tl_btn_find"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.3"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_find" />

        <ImageButton
            android:id="@+id/tl_btn_write"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.3"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="10" >

        <ImageButton
            android:id="@+id/tl_btn_timeline"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/tl_tab_tl" />

        <ImageButton
            android:id="@+id/tl_btn_category"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/tl_tab_category" />
    </LinearLayout>
    <ListView
        android:id="@+id/timeline_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="8.5"
        android:choiceMode="singleChoice"
        android:divider="#000000" >
    </ListView>

</LinearLayout>