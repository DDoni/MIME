<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/in_box"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    
    android:weightSum="30" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="2.5"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/timeline_profile"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@drawable/profile_pics"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="10" >

            <TextView
                android:id="@+id/timeline_nickname"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:gravity="left|bottom"
                android:paddingLeft="5dp"
                android:text="또니"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeline_id"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:gravity="left|top"
                android:paddingLeft="5dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/timeline_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <TextView
        android:id="@+id/timeline_text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15.5"
        android:background="#ffffff"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" 
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="4"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="6" >

        <Button
            android:id="@+id/timeline_comment"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/comment_box"
            android:scaleType="fitXY"
            android:text="댓글"
            android:textSize="12sp" />

        <Button
            android:id="@+id/timeline_share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/comment_box"
            android:scaleType="fitXY"
            android:text="공유"
            android:textSize="12sp" />

        <Button
            android:id="@+id/timeline_like"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/comment_box"
            android:scaleType="fitXY"
            android:text="좋아요"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>